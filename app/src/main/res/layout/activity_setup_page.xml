<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/setupbackground">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:src="@mipmap/vectis_main_logo" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo">

        <TextView
            android:id="@+id/top_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="70dp"
            android:textColor="@color/deep_blue"
            android:text="@string/vectis_setup"
            android:textSize="45dp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/write_up"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_banner"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/deep_blue"
            android:layout_marginTop="50dp"
            android:padding="20dp"
            android:text="@string/splash_intro"
            android:textSize="20sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@id/write_up"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_back_color"
            android:text="COMMENCE  SETUP"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>