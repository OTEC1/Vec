<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">


            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="20dp">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/intro1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Setup Access code"
                        android:textColor="@color/deep_blue"
                        android:textSize="30sp" />


                    <View
                        android:id="@+id/line"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_below="@id/intro1"
                        android:layout_marginTop="25dp"
                        android:background="@color/deep_blue" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/intro2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/line"
                        android:textColor="@color/deep_blue"
                        android:layout_marginTop="50dp"
                        android:layout_centerHorizontal="true"
                        android:text="Kindly enter your Setup Code to get started" />

                    <EditText
                        android:id="@+id/input4"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:layout_below="@id/intro2"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="20dp"
                        android:background="@drawable/input_gray_fill"
                        android:hint="Installation Code"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textColorHint="@color/dark_gray"
                        android:gravity="center_horizontal" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/activate"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_below="@id/input4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/btn_back_color"
                        android:text="Activate"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/card" />
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>