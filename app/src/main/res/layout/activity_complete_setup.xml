<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wizard_bkgd_2"
    tools:context=".UI.Complete_setup">


    <GridLayout
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:rowCount="3">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle"
                android:drawableStart="@drawable/ic_baseline_check_24"
                android:drawableLeft="@drawable/ic_baseline_check_24"
                android:gravity="center"
                android:paddingStart="7dp"
                android:paddingLeft="7dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_gray"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:text="2"
                android:textColor="@color/white" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/circle_gray"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:text="3"
                android:textColor="@color/white" />

        </RelativeLayout>
    </GridLayout>


    <TextView
        android:id="@+id/top_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="Finished/Run Test"
        android:textColor="@color/deep_blue"
        android:textSize="45dp" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_banner"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="Smart Terminal setup completed successfully!"
        android:textColor="@color/green"
        android:textSize="20dp" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/ter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="50dp"
                android:layout_marginRight="-50dp"
                android:src="@mipmap/terminal_ui" />


            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ter"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:id="@+id/contain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp">

                        <View
                            android:id="@+id/logoRound"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle" />

                        <TextView
                            android:id="@+id/info1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/logoRound"
                            android:text="WORKSTATION ID" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/contain"
                        android:layout_marginTop="1dp"
                        android:background="@color/dark_gray" />


                    <RelativeLayout
                        android:id="@+id/contain2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/contain"
                        android:layout_margin="15dp">

                        <View
                            android:id="@+id/logoRound2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle" />

                        <TextView
                            android:id="@+id/info2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/logoRound2"
                            android:text="MERCHANT" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/contain2"
                        android:layout_marginTop="1dp"
                        android:background="@color/dark_gray" />


                    <RelativeLayout
                        android:id="@+id/contain3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/contain2"
                        android:layout_margin="15dp">

                        <View
                            android:id="@+id/logoRound3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle" />

                        <TextView
                            android:id="@+id/info3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/logoRound3"
                            android:text="TERMINAL LOCATION" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/contain3"
                        android:layout_marginTop="1dp"
                        android:background="@color/dark_gray" />


                    <RelativeLayout
                        android:id="@+id/contain4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/contain3"
                        android:layout_margin="15dp">

                        <View
                            android:id="@+id/logoRound4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle" />

                        <TextView
                            android:id="@+id/info4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/logoRound4"
                            android:text="SERVICE TYPE" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/last_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/contain4"
                        android:layout_marginTop="1dp"
                        android:background="@color/dark_gray" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@id/verify"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@id/card"
                android:layout_marginTop="20dp"
                android:layout_marginRight="80dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_back_color"
                android:text="LUNCH VECTIS ORBIT"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>